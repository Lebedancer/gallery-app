.ifun-nav {
    color: #fff;
    position: absolute;
    top: 0;
    left: 0;
    width 300px;
    z-index: 100;
    height: 100%;
    background: $mainColor;
    transition: all 0.5s;
    text-align: center;
    transform: translate3d(-100%, 0, 0);
}

.ifun-nav__menu {
    position: absolute;
    top: 0;
    right: -51px;
    font-size: 35px;
    padding: 5px 10px;
    color: $textColor;
    background-color: transparent;

    &:hover {
        box-shadow: 0 5px 15px 0 rgba(0,0,0,0.5);
    }
}

.ifun-nav__logo {
    display: inline-block;
    margin: 10px auto;
    font-size: 90px;
}

.ifun-nav__item {
    text-align: left;

    a {
        cursor: pointer
        display: block;
        padding: 16px 20px;
        outline: none;
        color: #f3efe0;
        letter-spacing: 1px;
        font-weight: 400;
        transition: all 0.3s;
        font-size: 25px;
        text-decoration: none

        &:before {
            margin-right: 10px;
        }

        &:hover {
            color: white;
            background-color: $activeColor;
            box-shadow: 0 7px 5px 0 rgba(0,0,0,0.47);
        }
    }
}

.nav--open {
    .ifun-nav{
        transform: translate3d(0, 0, 0);
        box-shadow: 3px 0 15px 0 rgba(0,0,0,0.3);
    }

    .ifun-nav__menu {
        right: -28px;
        background-color: #EAE7E0;
        box-shadow: 0 5px 15px 0 rgba(0, 0, 0, 0.5);
    }
}